<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="2"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="305dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardElevation="3dp"
            app:cardCornerRadius="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="5dp"
            android:layout_height="290dp">
            <LinearLayout
                android:weightSum="3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="2"
                    android:layout_margin="3dp"
                    android:layout_height="170dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/animal_image1"
                            android:padding="4dp"
                            android:src="@drawable/cow5"
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </ImageView>
                        <ImageView
                            android:src="@drawable/frame"
                            android:scaleType="fitXY"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                        </ImageView>
                    </FrameLayout>
                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:weightSum="3"
                    android:layout_height="110dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:weightSum="4"
                        android:layout_weight="1.9"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/name1"
                            android:gravity="left"
                            android:layout_margin="2dp"
                            android:textColor="@color/light_megenda"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:textSize="@dimen/sp_16"
                            android:fontFamily="serif"
                            android:typeface="serif"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:ellipsize="marquee"
                            android:text="নাম : বস "
                            android:layout_height="0dp">
                        </TextView>
                        <TextView
                            android:id="@+id/price1"
                            android:gravity="left"
                            android:layout_margin="2dp"
                            android:textColor="@color/light_megenda"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:textSize="@dimen/sp_16"
                            android:fontFamily="serif"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:ellipsize="marquee"
                            android:typeface="serif"
                            android:text="দাম : ১০০০০০০ টাকা "
                            android:layout_height="0dp">
                        </TextView>
                        <TextView
                            android:id="@+id/highest_bid1"
                            android:gravity="left"
                            android:layout_margin="2dp"
                            android:textColor="@color/light_megenda"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:textSize="@dimen/sp_16"
                            android:fontFamily="serif"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:ellipsize="marquee"
                            android:typeface="serif"
                            android:text="সর্বচ্চো বিড : ৫০০০০ টাকা"
                            android:layout_height="0dp">
                        </TextView>
                        <TextView
                            android:id="@+id/total_bid1"
                            android:gravity="left"
                            android:layout_margin="2dp"
                            android:textColor="@color/light_megenda"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:textSize="@dimen/sp_16"
                            android:fontFamily="serif"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:ellipsize="marquee"
                            android:typeface="serif"
                            android:text="মোট বিড : ৫ টি "
                            android:layout_height="0dp">
                        </TextView>
                    </LinearLayout>
                    <View
                        android:background="@color/divider_color1"
                        android:layout_width="1dp"
                        android:layout_margin="@dimen/dp_10"
                        android:layout_height="match_parent">
                    </View>
                    <LinearLayout
                        android:layout_weight="1.1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:weightSum="3"
                        android:layout_margin="4dp"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/pricing"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/round_back_white_with_border"
                            android:onClick="submit"
                            android:text="@string/pricing"
                            android:textColor="@color/light_megenda"
                            android:textSize="@dimen/sp_14">
                        </Button>
                        <Button
                            android:id="@+id/compare"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/round_back_white_with_border"
                            android:onClick="submit"
                            android:text="@string/compare"
                            android:textColor="@color/light_megenda"
                            android:textSize="@dimen/sp_14">

                        </Button>
                        <Button
                            android:id="@+id/details"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/round_back_white_with_border"
                            android:onClick="submit"
                            android:text="@string/details"
                            android:textColor="@color/light_megenda"
                            android:textSize="@dimen/sp_14">
                        </Button>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>