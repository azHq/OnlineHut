<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/rinho"
    tools:context=".Seller.ContactForSeller">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="2dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#400062"
        android:layout_height="300dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="#FBFBFB"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="@dimen/sp_22"
                    android:text="যোগাযোগ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                </ImageView>
                <TextView
                    android:id="@+id/phone_number"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="#FBFBFB"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="@dimen/sp_20"
                    android:text="017########"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <Button
                    android:id="@+id/call_btn"
                    android:text="কল করুন"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/round_btn_with_border"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                </ImageView>
                <TextView
                    android:id="@+id/mail"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="#FBFBFB"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="@dimen/sp_20"
                    android:text="azaz@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <Button
                    android:id="@+id/mail_btn"
                    android:text="মেইল করুন"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/round_btn_with_border"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp">
                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/message_btn"
                    android:text="মেসেজ করুন"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/round_btn_with_border"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="120dp"
                    android:layout_height="38dp">
                </Button>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>