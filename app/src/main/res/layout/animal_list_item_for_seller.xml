<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="2"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="290dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardElevation="6dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_height="260dp">
            <LinearLayout
                android:weightSum="3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1.25"
                    android:layout_height="0dp">

                    <ImageView
                        android:id="@+id/animal_image1"
                        android:src="@drawable/cow_image1"
                        android:scaleType="fitXY"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                    </ImageView>
                    <TextView
                        android:id="@+id/sold_price1"
                        android:text="Sold"
                        android:visibility="gone"
                        android:textSize="@dimen/sp_12"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:background="@drawable/gradient_back"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:textColor="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@color/rinho_transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">
                        <TextView
                            android:id="@+id/id"
                            android:layout_margin="3dp"
                            android:text="A-112"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1.75"
                    android:orientation="vertical"
                    android:weightSum="6"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/name1"
                        android:gravity="left"
                        android:layout_margin="2dp"
                        android:textColor="@color/item_info_text_color"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_16"
                        android:fontFamily="serif"
                        android:typeface="serif"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:ellipsize="marquee"
                        android:text="নাম : বস "
                        android:layout_height="0dp">
                    </TextView>
                    <TextView
                        android:id="@+id/price1"
                        android:gravity="left"
                        android:layout_margin="2dp"
                        android:textColor="@color/item_info_text_color"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_16"
                        android:fontFamily="serif"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:ellipsize="marquee"
                        android:typeface="serif"
                        android:text="দাম : ১০০০০০০ টাকা "
                        android:layout_height="0dp">
                    </TextView>
                    <TextView
                        android:id="@+id/highest_bid1"
                        android:gravity="left"
                        android:layout_margin="2dp"
                        android:textColor="@color/item_info_text_color"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_16"
                        android:fontFamily="serif"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:ellipsize="marquee"
                        android:typeface="serif"
                        android:text="সর্বচ্চো বিড : ৫০০০০ টাকা"
                        android:layout_height="0dp">
                    </TextView>
                    <TextView
                        android:id="@+id/total_bid1"
                        android:gravity="left"
                        android:layout_margin="2dp"
                        android:textColor="@color/item_info_text_color"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_16"
                        android:fontFamily="serif"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:ellipsize="marquee"
                        android:typeface="serif"
                        android:text="মোট বিড : ৫ টি "
                        android:layout_height="0dp">
                    </TextView>
                    <Button
                        android:id="@+id/show_bid_history1"
                        android:layout_weight="1.7"
                        android:background="@drawable/round_back_transparent"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/item_info_text_color"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:text="@string/view_price"
                        android:layout_marginBottom="3dp"
                        android:layout_height="0dp">

                    </Button>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_weight="1"
            app:cardElevation="6dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="23dp"
            android:layout_height="260dp">
            <LinearLayout
                android:weightSum="3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1.25"
                    android:layout_height="0dp">
                    <ImageView
                        android:id="@+id/animal_image2"
                        android:src="@drawable/cow_image2"
                        android:scaleType="fitXY"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                    </ImageView>
                    <TextView
                        android:id="@+id/sold_price2"
                        android:text="Sold"
                        android:visibility="gone"
                        android:textSize="@dimen/sp_12"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:background="@drawable/gradient_back"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:textColor="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@color/rinho_transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">
                        <TextView
                            android:id="@+id/id2"
                            android:layout_margin="3dp"
                            android:text="A-112"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1.75"
                    android:orientation="vertical"
                    android:weightSum="6"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/name2"
                        android:gravity="left"
                        android:layout_margin="2dp"
                        android:textColor="@color/item_info_text_color"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_16"
                        android:fontFamily="serif"
                        android:typeface="serif"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:ellipsize="marquee"
                        android:text="নাম : বস "
                        android:layout_height="0dp">
                    </TextView>
                    <TextView
                        android:id="@+id/price2"
                        android:gravity="left"
                        android:layout_margin="2dp"
                        android:textColor="@color/item_info_text_color"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_16"
                        android:fontFamily="serif"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:ellipsize="marquee"
                        android:typeface="serif"
                        android:text="দাম : ১০০০০০০ টাকা "
                        android:layout_height="0dp">
                    </TextView>
                    <TextView
                        android:id="@+id/highest_bid2"
                        android:gravity="left"
                        android:layout_margin="2dp"
                        android:textColor="@color/item_info_text_color"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_16"
                        android:fontFamily="serif"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:ellipsize="marquee"
                        android:typeface="serif"
                        android:text="সর্বচ্চো বিড : ৫০০০০ টাকা"
                        android:layout_height="0dp">
                    </TextView>
                    <TextView
                        android:id="@+id/total_bid2"
                        android:gravity="left"
                        android:layout_margin="2dp"
                        android:textColor="@color/item_info_text_color"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_16"
                        android:fontFamily="serif"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:ellipsize="marquee"
                        android:typeface="serif"
                        android:text="মোট বিড : ৫ টি "
                        android:layout_height="0dp">
                    </TextView>
                    <Button
                        android:id="@+id/show_bid_history2"
                        android:layout_weight="1.7"
                        android:background="@drawable/round_back_transparent"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/item_info_text_color"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:text="দামগুলো দেখুন"
                        android:layout_marginBottom="3dp"
                        android:layout_height="0dp">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>