<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".Seller.PriceHistoryForSeller">

    <androidx.cardview.widget.CardView
        app:cardElevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:scaleType="fitXY"
            android:src="@drawable/cow_image1"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <View
                android:background="@color/magenta_transparent2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/table_border_width">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="@dimen/table_cell_height_35">
                <TextView
                    android:background="@drawable/table_border3"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:gravity="center"
                    android:textColor="@color/light_megenda"
                    android:text="@string/id"
                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:id="@+id/id"
                    android:background="@drawable/table_border4"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:textSize="@dimen/sp_14"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:text="00"
                    android:textColor="@color/light_megenda"
                    android:gravity="center"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="@dimen/table_cell_height_35">
                <TextView
                    android:background="@drawable/table_border3"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:gravity="center"
                    android:textColor="@color/light_megenda"
                    android:text="@string/animal_name"
                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:id="@+id/name"
                    android:background="@drawable/table_border4"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:text="00"
                    android:textColor="@color/light_megenda"
                    android:gravity="center"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="@dimen/table_cell_height_35">
                <TextView
                    android:background="@drawable/table_border3"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:gravity="center"
                    android:textColor="@color/light_megenda"
                    android:text="@string/highest_bid"
                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:id="@+id/price"
                    android:background="@drawable/table_border4"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:text="00"
                    android:textColor="@color/light_megenda"
                    android:gravity="center"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:background="@color/magenta_transparent2"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/table_border_width">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/empty"
            android:visibility="gone"
            android:text="@string/no_price"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle"
            android:layout_marginTop="5dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>