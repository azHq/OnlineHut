<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Buyer.ConfirmationMessageAndPaymentInfo">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#400062"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1.3"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_margin="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/confirm_message"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:textColor="#FBFBFB"
                            android:textStyle="bold"
                            android:padding="@dimen/dp_10"
                            android:fontFamily="serif"
                            android:textSize="@dimen/sp_18"
                            android:text="বিঃদ্রঃ আপনাকে 6 ঘণ্টার মধ্যে 25% পেমেন্ট কমপ্লিট করতে হবে।"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </TextView>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="3dp"
                app:cardBackgroundColor="#400062"
                android:layout_height="305dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_margin="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textColor="#FBFBFB"
                            android:textStyle="bold"
                            android:fontFamily="serif"
                            android:textSize="19sp"
                            android:text="নিচের যেকোনো নাম্বারে পেমেন্ট করুন।"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="8dp"
                            android:src="@drawable/bkash_icon2"
                            android:layout_width="40dp"
                            android:layout_height="30dp">
                        </ImageView>
                        <TextView
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textColor="#FBFBFB"
                            android:textStyle="bold"
                            android:fontFamily="serif"
                            android:textSize="@dimen/sp_18"
                            android:text="বিকাশ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/bkash_acc_number"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:textColor="#FBFBFB"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:textSize="@dimen/sp_18"
                        android:text="017########"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                    <View
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/divider_color1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp">
                    </View>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="8dp"
                            android:src="@drawable/rocket_icon"
                            android:layout_width="40dp"
                            android:layout_height="30dp">
                        </ImageView>
                        <TextView
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textColor="#FBFBFB"
                            android:textStyle="bold"
                            android:fontFamily="serif"
                            android:textSize="@dimen/sp_18"
                            android:text="রকেট"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/rocket_acc_number"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:textColor="#FBFBFB"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:textSize="@dimen/sp_18"
                        android:text="017########"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                    <View
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/divider_color1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp">
                    </View>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="8dp"
                            android:src="@drawable/nagad_icon"
                            android:layout_width="40dp"
                            android:layout_height="30dp">
                        </ImageView>
                        <TextView
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textColor="#FBFBFB"
                            android:textStyle="bold"
                            android:fontFamily="serif"
                            android:textSize="@dimen/sp_18"
                            android:text="নগদ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/nagad_acc_number"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:textColor="#FBFBFB"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:textSize="@dimen/sp_18"
                        android:text="017########"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/referral_code_card_view"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                android:visibility="visible"
                app:cardBackgroundColor="#400062"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1.3"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <EditText
                            android:id="@+id/referral_code"
                            android:layout_margin="@dimen/dp_10"
                            android:gravity="center|left"
                            android:paddingLeft="@dimen/dp_10"
                            android:inputType="numberDecimal"
                            android:background="@drawable/editback4"
                            android:textColor="#FBFBFB"
                            android:textStyle="bold"
                            android:hint="referral code(optional)"
                            android:fontFamily="serif"
                            android:textSize="@dimen/sp_16"
                            android:layout_weight="1.4"
                            android:layout_width="0dp"
                            android:layout_height="40dp">
                        </EditText>
                        <Button
                            android:id="@+id/submit_btn"
                            android:text="@string/submit"
                            android:textSize="@dimen/sp_14"
                            android:layout_marginEnd="10dp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/round_btn_with_border"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_width="0dp"
                            android:layout_weight=".6"
                            android:layout_height="35dp">
                        </Button>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="2dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#400062"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_margin="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textColor="#FBFBFB"
                            android:textStyle="bold"
                            android:fontFamily="serif"
                            android:textSize="@dimen/sp_22"
                            android:text="যোগাযোগ"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp">
                        </ImageView>
                        <TextView
                            android:id="@+id/phone_number"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textColor="#FBFBFB"
                            android:textStyle="bold"
                            android:fontFamily="serif"
                            android:textSize="@dimen/sp_20"
                            android:text="01795528283"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <Button
                            android:id="@+id/call_btn"
                            android:text="কল করুন"
                            android:textSize="@dimen/sp_14"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/round_btn_with_border"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp">
                        </Button>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp">
                        </ImageView>
                        <TextView
                            android:id="@+id/mail"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textColor="#FBFBFB"
                            android:textStyle="bold"
                            android:fontFamily="serif"
                            android:textSize="@dimen/sp_20"
                            android:text="azaz@gmail.com"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <Button
                            android:id="@+id/mail_btn"
                            android:text="মেইল করুন"
                            android:textSize="@dimen/sp_14"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/round_btn_with_border"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp">
                        </Button>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/message_btn"
                            android:text="মেসেজ করুন"
                            android:textSize="@dimen/sp_14"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/round_btn_with_border"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_width="120dp"
                            android:layout_height="38dp">
                        </Button>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>