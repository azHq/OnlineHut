<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rinho"
    tools:context=".Seller.SellerProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="240dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_picture"
                    android:src="@drawable/profile_icon"
                    android:layout_width="110dp"
                    android:layout_height="110dp">
                </de.hdodenhof.circleimageview.CircleImageView>
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/name"
                        android:text="@string/name2"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_height="wrap_content">
                    </TextView>
                    <Button
                        android:id="@+id/edit_name"
                        android:layout_toEndOf="@+id/name"
                        android:background="@drawable/edit_vector"
                        android:layout_width="20dp"
                        android:layout_height="20dp">
                    </Button>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/phone_number"
                        android:text="@string/phone_number"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_height="wrap_content">
                    </TextView>
                    <Button
                        android:id="@+id/edit_phone_number"
                        android:layout_toEndOf="@+id/phone_number"
                        android:background="@drawable/edit_vector"
                        android:layout_width="20dp"
                        android:layout_height="20dp">
                    </Button>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:gravity="center"
                        android:text="@string/email"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16">

                    </TextView>
                    <Button
                        android:id="@+id/edit_email"
                        android:layout_toEndOf="@+id/email"
                        android:background="@drawable/edit_vector"
                        android:layout_width="20dp"
                        android:layout_height="20dp">
                    </Button>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/address"
                        android:text="@string/address"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/white"
                        android:maxWidth="300dp"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:ellipsize="marquee"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_height="wrap_content">
                    </TextView>
                    <Button
                        android:id="@+id/edit_address"
                        android:layout_toEndOf="@+id/address"
                        android:background="@drawable/edit_vector"
                        android:layout_width="20dp"
                        android:layout_height="20dp">
                    </Button>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@color/divider_color1"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/one_dp">
                    </View>
                    <View
                        android:background="@color/divider_color1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/one_dp">
                    </View>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_14"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_marginTop="5dp"
                    android:background="@color/divider_color1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/table_border_width">
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="@dimen/table_cell_height">
                    <TextView
                        android:background="@drawable/table_border"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="@string/total_item"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:id="@+id/total_item"
                        android:background="@drawable/table_border2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:ellipsize="marquee"
                        android:text="00"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="40dp">
                    <TextView
                        android:background="@drawable/table_border"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="@string/total_sold_item"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:id="@+id/total_sold_item"
                        android:background="@drawable/table_border2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="@color/white"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="@dimen/table_cell_height">
                    <TextView
                        android:background="@drawable/table_border"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="@string/total_unsold_item"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:id="@+id/total_unsold_item"
                        android:background="@drawable/table_border2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="00"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="@dimen/table_cell_height">
                    <TextView
                        android:background="@drawable/table_border"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="@string/total_sell"
                        android:layout_height="40dp">
                    </TextView>
                    <TextView
                        android:id="@+id/total_sell"
                        android:background="@drawable/table_border2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="0.00 TK"
                        android:layout_height="40dp">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="40dp">
                    <TextView
                        android:background="@drawable/table_border"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                    </TextView>
                    <TextView
                        android:background="@drawable/table_border2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="40dp">
                    <TextView
                        android:background="@drawable/table_border"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                    </TextView>
                    <TextView
                        android:background="@drawable/table_border2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="40dp">
                    <TextView
                        android:background="@drawable/table_border"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                    </TextView>
                    <TextView
                        android:background="@drawable/table_border2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="40dp">
                    <TextView
                        android:background="@drawable/table_border"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                    </TextView>
                    <TextView
                        android:background="@drawable/table_border2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="40dp">
                    <TextView
                        android:background="@drawable/table_border"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                    </TextView>
                    <TextView
                        android:background="@drawable/table_border2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="40dp">
                    <TextView
                        android:background="@drawable/table_border"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                    </TextView>
                    <TextView
                        android:background="@drawable/table_border2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                    </TextView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</FrameLayout>