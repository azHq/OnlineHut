<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Seller.Add_New_Animal">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1000dp">
            <LinearLayout
                android:background="@drawable/round_back_transparent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="none"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:id="@+id/name"
                    android:background="@drawable/round_back_white"
                    android:layout_width="match_parent"
                    android:hint="@string/animal_name"
                    android:textSize="@dimen/sp_16"
                    android:paddingLeft="@dimen/dp_10"
                    android:textColor="@color/light_megenda"
                    android:textColorHint="@color/light_megenda"
                    android:layout_height="44dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textColorHint="#1D5A8F"
                    android:background="@drawable/round_back_white"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/animal_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:theme="@style/Spinner_Theme"
                        android:spinnerMode="dropdown" />

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp"
                        android:clickable="false"
                        android:background="@drawable/dropdown_icon"
                        android:backgroundTint="#E468971D" />

                </RelativeLayout>
                <EditText
                    android:inputType="phone"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="@color/light_megenda"
                    android:id="@+id/price"
                    android:background="@drawable/round_back_white"
                    android:layout_width="match_parent"
                    android:hint="@string/animal_price"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:paddingLeft="@dimen/dp_16"
                    android:textColorHint="@color/light_megenda"
                    android:layout_height="44dp"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:background="@drawable/round_back_white"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_height="44dp">
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/age"
                        android:gravity="center"
                        android:textColor="@color/light_megenda"
                        android:layout_width="0dp">

                    </TextView>
                    <View
                        android:layout_width="1dp"
                        android:background="@color/divider_color1"
                        android:layout_height="match_parent">
                    </View>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="44dp"
                        android:textColorHint="#1D5A8F"
                        android:background="@drawable/round_back_white"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/year"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:theme="@style/Spinner_Theme"
                            android:spinnerMode="dropdown" />

                        <Button
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="4dp"
                            android:clickable="false"
                            android:background="@drawable/dropdown_icon"
                            android:backgroundTint="#E468971D" />

                    </RelativeLayout>
                    <View
                        android:layout_width="1dp"
                        android:background="@color/divider_color1"
                        android:layout_height="match_parent">
                    </View>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="44dp"
                        android:textColorHint="#1D5A8F"
                        android:background="@drawable/round_back_white"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/month"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:theme="@style/Spinner_Theme"
                            android:spinnerMode="dropdown" />

                        <Button
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="4dp"
                            android:clickable="false"
                            android:background="@drawable/dropdown_icon"
                            android:backgroundTint="#E468971D" />

                    </RelativeLayout>
                </LinearLayout>

                <EditText
                    android:inputType="phone"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:id="@+id/age"
                    android:textColor="@color/light_megenda"
                    android:background="@drawable/round_back_white"
                    android:layout_width="match_parent"
                    android:hint="@string/age"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:paddingLeft="@dimen/dp_16"
                    android:textColorHint="@color/light_megenda"
                    android:layout_height="44dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textColorHint="#1D5A8F"
                    android:background="@drawable/round_back_white"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/animal_color_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:theme="@style/Spinner_Theme"
                        android:spinnerMode="dropdown" />

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp"
                        android:clickable="false"
                        android:background="@drawable/dropdown_icon"
                        android:backgroundTint="#E468971D" />

                </RelativeLayout>

                <EditText
                    android:inputType="phone"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:id="@+id/weight"
                    android:textColor="@color/light_megenda"
                    android:background="@drawable/round_back_white"
                    android:layout_width="match_parent"
                    android:hint="@string/weight"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:paddingLeft="@dimen/dp_16"
                    android:textColorHint="@color/light_megenda"
                    android:layout_height="44dp"/>
                <EditText
                    android:inputType="phone"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:id="@+id/height"
                    android:textColor="@color/light_megenda"
                    android:background="@drawable/round_back_white"
                    android:layout_width="match_parent"
                    android:hint="@string/height"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:paddingLeft="@dimen/dp_16"
                    android:textColorHint="@color/light_megenda"
                    android:layout_height="44dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textColorHint="#1D5A8F"
                    android:background="@drawable/round_back_white"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/number_of_teeth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:theme="@style/Spinner_Theme"
                        android:spinnerMode="dropdown" />

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp"
                        android:clickable="false"
                        android:background="@drawable/dropdown_icon"
                        android:backgroundTint="#E468971D" />
                </RelativeLayout>
                <EditText
                    android:inputType="none"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:id="@+id/born"
                    android:background="@drawable/round_back_white"
                    android:layout_width="match_parent"
                    android:hint="@string/born"
                    android:textColor="@color/light_megenda"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:paddingLeft="@dimen/dp_16"
                    android:textColorHint="@color/light_megenda"
                    android:layout_height="44dp"/>
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:background="@color/divider_color1"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </View>
            <LinearLayout
                android:layout_margin="10dp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:background="@color/magenta_transparent"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:src="@drawable/cow_image1"
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </ImageView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <Button
                        android:onClick="add_image"
                        android:textColor="@color/light_megenda"
                        android:text="@string/image_upload"
                        android:background="@drawable/round_back_white"
                        android:layout_width="150dp"
                        android:layout_height="40dp">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/divider_color1"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </View>
            <LinearLayout
                android:layout_margin="10dp"
                android:weightSum="3"
                android:background="@color/magenta_transparent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:src="@drawable/cow_image2"
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </ImageView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:background="@drawable/back_rect_with_border"
                    android:layout_height="match_parent">
                    <Button
                        android:textColor="@color/light_megenda"
                        android:text="@string/video_upload"
                        android:onClick="add_video"
                        android:background="@drawable/round_back_white"
                        android:layout_width="150dp"
                        android:layout_height="40dp">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/divider_color1"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </View>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:gravity="bottom|center"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_height="100dp">
                <Button
                    android:background="@drawable/round_back_white_with_border"
                    android:text="@string/submit"
                    android:onClick="submit"
                    android:textSize="@dimen/sp_16"
                    android:layout_width="230dp"
                    android:textColor="@color/light_megenda"
                    android:layout_marginBottom="5dp"
                    android:layout_height="45dp">

                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>